<%= provide(:title, "Edit link") %>
<h1>Edit link</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@link) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :stars %>
      <%= f.text_field :stars %>

      <%= f.label :notes %>
      <%= f.text_field :notes %>

      <%= f.submit "Update link", :class => "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>