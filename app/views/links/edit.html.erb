<%= provide(:title, "Edit link") %>
<h1>Edit link</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@link) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :stars %>
      <% f.text_field :stars %>

	   <div class="Clear">
		<% 5.times do |i| %>
		    <input id="star<%=@link.id%>_<%=i+1%>" class="star" type="radio" name="link[stars]" value=<%=i+1%> <% if @link.stars==i+1 %> checked="checked"<% end %>/>
		<% end %>
	   </div>
	   <br/>

	<div class="btn-group">
		<% @tags.each do |tag|%>
	    <input type="checkbox" id="tag_<%=tag.id%>" name="link[tag][<%=tag.id%>]" value="<%=tag.id%>" <% if @link.tags.include?(tag)%>checked<% end %>/>
	    <label class="btn" for="tag_<%=tag.id%>"><%=tag.name%></label>
		<% end %>
	</div>

      <%= f.label :notes %>
      <%= f.text_field :notes %>

      <%= f.submit "Update link", :class => "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>