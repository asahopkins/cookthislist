<header class="navbar">
  <div class="navbar-inner">
    <div class="container">
	<%= link_to image_tag("ctl_horizontal.png", alt: "Cook This List"), root_path%>
          <% if signed_in? %>
        <ul class="nav pull-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.name %> <b class="caret"></b></a>
            <ul class="dropdown-menu">
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
            </ul>
          </li>
      </ul>
	<%= form_tag links_path, :method => 'get', :class=> "navbar-search pull-right", :id=>"link_search" do %>
		<%= text_field_tag :search, nil, {:class=>"search-query span3", :placeholder=>"Search", :id=>"search-terms"} %>
		<%= submit_tag "Search", :name => nil, :class=>"btn" %>
        <% end -%>
          <% else %>
        <ul class="nav pull-right">
            <li><%= link_to "Sign in", signin_path %></li>
        </ul>
          <% end %>
    </div>
  </div><!-- /navbar-inner -->
</header><!-- /navbar -->